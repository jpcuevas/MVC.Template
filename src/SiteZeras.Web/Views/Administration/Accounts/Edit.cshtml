@model AccountEditView

<div class="widget-box">
    <div class="widget-title">
        <span class="widget-title-icon fa fa-th-list"></span>
        <h5>@Headers.AdministrationAccountsEdit</h5>
        <div class="widget-title-buttons">
            @Html.WidgetButton("Details", "fa fa-info")
        </div>
    </div>
    <div class="widget-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="control-label col-sm-12 col-md-3 col-lg-2">
                    @Html.FormLabelFor(model => model.Username)
                </div>
                <div class="control-content col-sm-12 col-md-9 col-lg-5">
                    @Html.FormTextBoxFor(model => model.Username)
                </div>
                <div class="control-validation col-sm-12 col-md-12 col-lg-5">
                    @Html.ValidationMessageFor(model => model.Username)
                </div>
            </div>
            <div class="form-group">
            </div>
            <div class="form-group">
                <div class="control-label col-sm-12 col-md-3 col-lg-2">
                    @Html.FormLabelFor(model => model.RoleId)
                </div>
                <div class="control-content col-sm-12 col-md-9 col-lg-5">
                    @Html.DatalistFor(model => model.RoleId, new BaseDatalist<Role, RoleView>())
                </div>
                <div class="control-validation col-sm-12 col-md-12 col-lg-5">
                    @Html.ValidationMessageFor(model => model.RoleId)
                </div>
            </div>
            <div class="form-group">
                <div class="form-actions col-sm-12 col-md-12 col-lg-7">
                    <input class="btn btn-primary" type="submit" value="@Actions.Submit" />
                </div>
            </div>
        }
    </div>
</div>
