@model RoleView

<div class="widget-box">
    <div class="widget-title">
        <span class="widget-title-icon fa fa-th-list"></span>
        <h5>@Headers.AdministrationRolesCreate</h5>
    </div>
    <div class="widget-content">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="control-label col-sm-12 col-md-3 col-lg-2">
                    @Html.FormLabelFor(model => model.Name)
                </div>
                <div class="control-content col-sm-12 col-md-9 col-lg-5">
                    @Html.FormTextBoxFor(model => model.Name)
                </div>
                <div class="control-validation col-sm-12 col-md-12 col-lg-5">
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-sm-12 col-md-3 col-lg-2">
                    @Html.FormLabelFor(model => model.PrivilegesTree)
                </div>
                <div class="control-content col-sm-12 col-md-9 col-lg-5">
                    @Html.JsTreeFor(model => model.PrivilegesTree)
                </div>
                <div class="control-validation col-sm-12 col-md-12 col-lg-5">
                    @Html.ValidationMessageFor(model => model.PrivilegesTree)
                </div>
            </div>
            <div class="form-group">
                <div class="form-actions col-sm-12 col-md-12 col-lg-7">
                    <input class="btn btn-primary" type="submit" value="@Actions.Submit" />
                </div>
            </div>
        }
    </div>
</div>
